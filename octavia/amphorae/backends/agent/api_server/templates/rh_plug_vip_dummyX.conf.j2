# Generated by Octavia agent
NM_CONTROLLED="no"
DEVICE="{{ interface }}"
ONBOOT="yes"
TYPE="dummy"
USERCTL="no"
BOOTPROTO="static"

{%- set item = 0 %}
{%- for vip in vip_list %}
{%- if '4' in vip.version %}
IPADDR"{{item}}"="{{ vip.vip }}"
PREFIX"{{item}}"=32
{%- set item = item + 1 %}
{%- endif %}
{%- endfor %}

{%- set ipv6_list = "" %}
{%- set item = 0 %}
{%- for vip in vip_list %}
{%- if '6' in vip.version %}
{%- if '0' in item %}
IPV6ADDR="{{ vip.vip }}"/128
{%- endif %}
{%- else %}
{%- set ipv6_list = ipv6_list + ' ' + "{{ vip.vip }}/128" %}
{%- endif %}
{%- set item = item + 1 %}
{%- endfor %}

{%- if ipv6_list != "" %}
IPV6ADDR_SECONDARIES=\""{{ipv6_list}}"\"
{%- endif %}